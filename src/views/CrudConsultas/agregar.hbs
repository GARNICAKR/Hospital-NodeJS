<form action="/CrudConsultas/agregar" method="POST">
    <div class="divisor-3">
        <input type="hidden" name="Paciente"value="{{paciente._id}}">
        <div class="contenedorAgregar">
            <div class="card background">
                <div class="card-header mx-auto letrasAgregar">
                    <h3>Datos Paciente</h3>
                </div>
                <div class="card-body">
                    <div class="form-group inputs">
                        <h5>{{paciente.Nombre}}{{paciente.Apellido}}</h5>
                    </div>
                    <div class="form-group inputs">
                      <h5>DNI: {{paciente.DNI}}</h5>
                    </div>
                    <div class="form-group inputs">
                        <h5>NSS: {{paciente.NSS}}</h5>
                    </div>
                    <div class="form-group inputs">
                        <h5>Edad: {{paciente.Edad}}</h5>
                    </div>
                    <div class="form-group inputs">
                        <h5>Peso: {{paciente.Peso}}</h5>
                    </div>
                    <div class="form-group inputs">
                        <h5>Estatura: {{paciente.Altura}}</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="contenedorAgregar">
            <div class="card background">
                <div class="card-header mx-auto letrasAgregar">
                    <h3>Sintomas</h3>
                </div>
                <div class="card-body">
                    <div class="form-group inputs letrasscroll">
                        <select name="SintomasPa" onchange="select()" id="usuario" size="9" multiple>
                            {{#each sintomas}}
                            <option>{{Nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
<div class="contenedorAgregar">
            <div class="card background">
                <div class="card-header mx-auto letrasAgregar">
                    <h3>Signos</h3>
                </div>
                <div class="card-body">
                    <div class="form-group inputs letrasscroll">
                        <select name="SignosPa" onchange="select()" id="usuario" size="9" multiple>
                            {{#each signos}}
                            <option>{{Nombre}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="botton-form margenbottom">
        <button class="forma" type="submit">
            Hacer Diagnostico
        </button>
    </div>
    <div class="cuadritos4"></div>
</form>