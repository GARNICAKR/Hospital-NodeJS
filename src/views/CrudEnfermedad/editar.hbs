<div class="contenedorAgregar">
    <div class="card background">
        <div class="card-header mx-auto letrasEditar">
            <h3>Editar Enfermedad</h3>
        </div>

        <div class="card-body"> 
            <form action="/CrudEnfermedad/editar/{{enfermedad._id}}?_method=PUT" method="POST">
            <input type="hidden" name="_method" value="PUT">

            <div class="form-group inputs">
                <input type="text" name="Enfermedad" class="form-control" placeholder="Enfermedad"
                value="{{enfermedad.Enfermedad}}" >
            </div>
            
            <div class="form-group inputs letrasscroll">
              <select name="Sintomas" onchange="select()" id="Sintomas" multiple>
                        <option selected="selected">Seleccione los Sintomas</option>
                        {{#each sintomas}}
                        <option>{{Nombre}}</option>
                        {{/each}}
                    </select>
                </div>
                 <div class="form-group inputs letrasscroll">
                    <select name="Signos" onchange="select()" id="Signos" multiple>
                        <option selected="selected">Seleccione los Signos</option>
                        {{#each signos}}
                        <option>{{Nombre}}</option>
                        {{/each}}
                    </select>
                </div>

            <div class="botton-form">
                <button class="forma" type="submit">
                    Guardar
                </button>
            </div>

            </form>
        </div>
    </div>
</div>